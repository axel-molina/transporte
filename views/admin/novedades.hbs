<div class="container" style="margin-top: 50px;">
    <div class="row">
        <div class="col">
            <p class="text-right">Hola {{ usuario }} <a href="/admin/login/logout" class="btn btn-sm
                    btn-danger">Cerrar sesi√≥n <i class="fa fa-sign-out" aria-hidden="true"></i></a></p>
        </div>
    </div>
    <div class="row">
        <div class="col-7">
            <h3>Listado de novedades</h3>
        </div>
        <div class="col-5 text-right">
            <a href="/admin/novedades/agregar" class="btn btn-success"><i class="fa fa-plus-circle" aria-hidden="true"></i> Nuevo</a>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Titulo</th>
                        <th class="text-center" scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each novedades}}
                    <tr>
                        <th scope="row">{{ id }}</th>
                        <td>{{ titulo }}</td>
                        <td class="text-center"><a title="Editar" href="/admin/novedades/modificar/{{id}}" class="btn btn-secondary"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                            <a href="/admin/novedades/eliminar/{{id}}" title="Eliminar" class="btn btn-secondary"><i class="fa fa-trash" aria-hidden="true"></i></a></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>